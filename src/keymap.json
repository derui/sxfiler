{
  "bindings": [
    {"action": "global:activate_content", "key": "Escape", "when": ["onComplete"]},
    {"action": "global:activate_omnibar", "key": "C-;", "when": ["onFileTree"]},
    {"action": "global:activate_omnibar", "key": "C-;", "when": ["onPreview"]},
    {"action": "file_list:next_item", "key": "j", "when": ["onFileTree"]},
    {"action": "file_list:prev_item", "key": "k", "when": ["onFileTree"]},
    {"action": "file_list:swap_filer", "key": "Tab", "when": ["onFileTree"]},
    {"action": "file_list:move_parent", "key": "^", "when": ["onFileTree"]},
    {"action": "file_list:toggle_mark", "key": "Space", "when": ["onFileTree"]},
    {"action": "file_list:enter_directory", "key": "Enter", "when": ["onFileTree"]},
    {"action": "file_list:move", "key": "m", "when": ["onFileTree"]},
    {"action": "completion:prev_item", "key": "ArrowUp", "when": ["onComplete"]},
    {"action": "completion:next_item", "key": "ArrowDown", "when": ["onComplete"]},
    {"action": "completion:select_item", "key": "Enter", "when": ["onComplete"]}
  ]
}
