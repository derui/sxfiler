@import './_colors'

html, body
  width: 100%
  height: 100%
  margin: 0
  padding: 0

.entry
  display: flex
  width: 100%
  height: 100%

  margin: 0
  padding: 0

.main
  display: flex
  flex-direction: column
  flex: 1 1 auto

  margin: 0
  padding: 0

  background-color: sol_base03

.file-panes
  display: flex
  flex: 1 1 auto
  flex-direction: row

.left-pane
  flex: 1 1 50%
  height: 100%;

.right-pane
  flex: 1 1 50%
  height: 100%;

.console-pane
  flex: 1 1 30%;

.file-list
  flex: 1 1 auto
  width: 100%
  height: 100%
  margin: 0
  padding: 0

  border-spacing: 0px

  &__col--mode
    width: 6em

.file-list__item
  justify-content: center

  list-style: none

  color: sol_base0
  font-family: monospace

  &.is-selected
    background-color: sol_base02

  &__name
    padding: 0.25em 0
    font-weight: bold

  &__size
    padding: 0.25em 0.5em
    text-align: right

  &__mode
    padding: 0.25em 0
    white-space: nowrap
    color: sol_base0

  &__mode--directory
    color: sol_blue

  &__mode--symlink
    color: sol_orange