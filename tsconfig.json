{
  "compilerOptions": {
    "target": "es2018",
    "lib": [
      "es2018",
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "jsxFactory": "h",
    "incremental": true,
    "baseUrl": "./",
    "outDir": "generated",
    "paths": {
      "@/*": [
        "src/ts/*"
      ]
    },
    "rootDirs": [
      "src/ts",
      "src/stories"
    ]
  },
  "include": [
    "src/ts/generated/*.js",
    "src/stories/**/*.tsx",
    "src/ts/**/*.ts",
    "src/ts/**/*.tsx",
    "src/index.tsx"
  ]
}
